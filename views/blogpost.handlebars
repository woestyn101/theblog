<h2>Post</h2>

<div class="card" style="width: 18rem;">
  <div class="card-body">
     <!-- Getting database fields and outputting to html-->
    <h5 class="card-title"> Title: {{ title }}</h5>   
   
    <p class="card-text">Content: {{ p_content }}</p>
     <h6 class="card-subtitle mb-2 text-body-secondary">Created by {{user.username}} on {{format_date user.createdAt}}</h6>

     <p id="getBpId" data-id="{{bp_id}}">{{bp_id}}</p>
    

    

    
     
   
  </div>
</div>

<form class="comment-user">
           

              <div class="mb-3">
                <label for="yourcomment" class="form-label">Add a comment</label>
              <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="yourcomment"></textarea>
                
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Add Comment</button>
     </form>






<script src="/js/add_comment.js"></script>