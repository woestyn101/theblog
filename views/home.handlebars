<h2>Welcome to my blog!</h2>

<!-- Loop over each object in the projects array -->
{{#each blogposts as |userpost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
    
      <a href="/project/{{userpost.bp_id}}">{{userpost.title}}</a>
    </h2>
    
    <p>Created by {{userpost.user.username}} on {{format_date userpost.createdAt}}</p>
  </div>
  
</div>
{{/each}}
